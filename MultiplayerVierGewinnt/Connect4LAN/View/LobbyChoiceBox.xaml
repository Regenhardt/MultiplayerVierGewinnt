<Window x:Class="Connect4LAN.View.LobbyChoiceBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Connect4LAN.View"
        mc:Ignorable="d"
        Title="Lobbies" Height="145.562" Width="300"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="Lobby to connect to:" HorizontalAlignment="Center" />
        <ListBox Name="LobbyList" Grid.Row="1"  Width="200" Height="auto" />
        <Button Grid.Row="2" Content="Connect" Command="{Binding ConfirmLobbyCommand}" Width="100" Height="30" IsDefault="True"/>

    </Grid>
</Window>
