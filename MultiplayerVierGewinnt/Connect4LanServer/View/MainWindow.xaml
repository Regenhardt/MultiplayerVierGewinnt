<Window x:Class="Connect4LanServer.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:Connect4LanServer"
		mc:Ignorable="d"
		Title="MainWindow" Height="350" Width="525"
		d:DataContext="{d:DesignInstance Type=local:DedicatedServerViewModel}">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		
		<!-- Status -->
		<Grid Grid.Row="0" HorizontalAlignment="Stretch">
			<Grid.ColumnDefinitions>
				<ColumnDefinition />
				<ColumnDefinition />
				<ColumnDefinition />
				<ColumnDefinition />
			</Grid.ColumnDefinitions>
			<TextBlock Grid.Column="0" Text="Runnimg: " />
			<TextBlock Grid.Column="1" Text="0" />
			<TextBlock Grid.Column="2" Text="Total: " />
			<TextBlock Grid.Column="3" Text="1" />
		</Grid>
		
		<!-- Games -->
		<ListBox Grid.Row="1" VerticalAlignment="Stretch" />
	</Grid>
</Window>
